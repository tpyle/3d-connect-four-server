{
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "rules": {
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never"
        }],
        "indent": ["error", 4],
        "max-len": ["error", 120],
        "no-unused-vars": ["warn", {
            "vars": "all",
            "args": "after-used",
            "ignoreRestSiblings": false,
            "argsIgnorePattern": "^_"
        }]
    },
    "extends": "strongloop"
}